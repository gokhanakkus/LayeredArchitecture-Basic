<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - App.Mvc</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/dark-mode.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/login.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/notification.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/theme-switch.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/App.Mvc.styles.css" asp-append-version="true" />
</head>
@{
    var isDarkModeEnabled = Context.Request.Cookies["DarkMode"] == "true";
}
<body class="@(isDarkModeEnabled ? "dark-mode" : "")">
    <header>
        <nav class="navbar navbar-expand-md border-bottom">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">App.Mvc</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                        aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse justify-content-between" id="navbarNav">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">
                                <img src="~/images/home.png" alt="Logout" class="nav-icon">
                                <span class="me-2">Home</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Privacy">
                                <img src="~/images/privacy.png" alt="Logout" class="nav-icon">
                                <span class="me-2">Privacy</span>
                            </a>
                        </li>
                    </ul>
                    <ul class="navbar-nav">
                        @if (User.Identity?.IsAuthenticated == true)
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Cart" asp-action="List">
                                    <img src="~/images/shoppingcart.png" alt="My Carts" class="nav-icon">
                                    <span class="me-2">My Carts</span>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Auth" asp-action="Logout">
                                    <span class="me-2">@User.Identity.Name</span>
                                    <img src="~/images/logout2.png" alt="Logout" class="nav-icon">
                                    <span>Logout</span>
                                </a>
                            </li>
                            <li>
                                <button class="theme-switch">
                                    <div class="theme-switch-toggle">
                                        <img src="~/images/sun2.png" alt="Sun" class="sun-icon">
                                        <img src="~/images/moon3.png" alt="Moon" class="moon-icon">
                                    </div>
                                </button>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Auth" asp-action="Login">
                                    Login
                                    <img src="~/images/login.png" alt="Logout" class="nav-icon">
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Auth" asp-action="Register">
                                    Register
                                    <img src="~/images/register.png" alt="Logout" class="nav-icon">
                                </a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-5">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted fixed-bottom">
        <div class="container text-center py-3">
            &copy; 2023 - App.Mvc - <a class="text-muted" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="https://cdn.jsdelivr.net/npm/jquery/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>