@model App.Data.Entities.CartEntity

@{
    ViewData["Title"] = "New Cart";
}

<h2 class="display-4">Create New Cart</h2>

<form asp-controller="Cart" asp-action="New" method="post">
    <div class="form-group mb-3">
        <label for="cartName">Cart Name:</label>
        <input type="text" id="cartName" name="cartName" class="form-control" />
    </div>
    <div>
        <button type="submit" class="btn btn-primary mb-4">Create</button>
        <a asp-controller="Cart" asp-action="List" class="btn btn-secondary mb-4">Back to My Carts</a>
    </div>
</form>